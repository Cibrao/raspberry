<div class="row">
  <div class="well col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
    <div class="row">
      <div class="text-center">
        <p>
          <h1>Wydatki</h1>
          <em>{{date}}</em>
        </p>
      </div> 
      <table class="table">
        <thead>
          <tr>
            <th class="text-right">Komentarz</th>
            <th class="text-right">Kwota</th>
            <th class="text-left">  </th> 
          </tr>
        </thead>
        <tbody>
            {{#each bills}}
          <tr>
            <td class="col-xs-5 col-md-7 text-right">{{comment}}</td>
            <td class="col-xs-5 col-md-3 text-right">{{amount}}</td>
            <td class="col-xs-1 col-md-1 text-center"><button id="remove" type="button" data-id="{{id}}" class="btn btn-danger btn-xs btn-block bills-button"><span class="glyphicon glyphicon-minus"></span></button></td>
          </tr>
            {{/each}}
          <tr data-spy="affix">
            <td class="col-xs-5 col-md-7 text-right"><input id="comment" class="col-xs-12 col-md-12 text-right"  placeholder="Komentarz" /></td>
            <td class="col-xs-5 col-md-3 text-right"><input id="amount" class="col-xs-12 col-md-12 text-right" placeholder="00,00" pattern="\d{1,6}((\.|,)\d{1,2})?" autofocus /></td>
            <td class="col-xs-1 col-md-1 text-center"><button id="add" type="button" class="btn btn-success btn-xs btn-block bills-button"><span class="glyphicon glyphicon-plus"></span></button></td>
          </tr>
          <tr>
            <td class="text-right"><h3>Suma:</td>
            <td class="text-right">
              <h3><strong class="text-danger">{{sumOfBills bills}}</strong></h3>
            </td>
            <td></td>
          </tr>
          <tr id="currentMonth">
            <td class="text-right"><h4>Bieżący miesiąc:</td>
            <td class="text-right">
              <h4><strong class="text-danger">{{sumOfCurrentMonthBills}}</strong></h4>
            </td>
            <td></td>
          </tr>
          <tr id="previousMonth">
            <td class="text-right"><h4>Poprzedni miesiąc:</td>
            <td class="text-right">
              <h4><strong class="text-danger">{{sumOfPreviousMonthBills}}</strong></h4>
            </td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>        
  </div>
</div>

